---
import { Icon } from 'astro-icon'
import Base from '../layouts/base.astro'
import PageHero from '../components/pagehero.astro'
import { SiteMetadata } from '../config'
import coverSVG from '../assets/images/pexels-karolina-grabowska-4218706.jpg'
import socialImage from '../assets/undraw/undraw_contact_us.png'

const frontmatter = {
  title: 'Diplomado',
  description: 'Educaci贸n ambiental y desarrollo sostenible en el departamento de Risaralda',
  coverSVG: coverSVG,
  socialImage: socialImage,
  publishDate: SiteMetadata.buildTime
}

const files = [
  {
    filename: '1. La Era del Desarrollo Sostenible',
    src: 'https://drive.google.com/file/d/1q8S8QV8_16ef02ReDRCfHzYZlmMuTPAF/view?usp=drive_link',
    iconName: 'twemoji:national-park',
  },
  {
    filename: '2. Educaci贸n Ambiental para el Desarrollo Sostenible',
    src: 'https://drive.google.com/file/d/1c5CmUbVkdeCpwCH4sqntXl_JTnbDl3Ve/view?usp=drive_link',
    iconName: 'emojione:national-park',
  },
  {
    filename: '3. Dinamizaci贸n de la Educaci贸n Ambiental para el Desarrollo Sostenible',
    src: 'https://drive.google.com/file/d/1TTDpA5Nnz30lr1ZP1GLN6uid9wJu5OoJ/view?usp=drive_link',
    iconName: 'emojione-v1:national-park',
  }
]
---

<Base frontmatter={frontmatter}>
  <div class='relative bg-blue-50 sm:w-5/6 mx-auto md:h-[calc(100vh-4rem)]'>
    <div class="mx-auto">
      <main>
        <section class='text-blue lg:m-0'>
          <div class='block p-1 lg:p-10 lg:mx-auto lg:w-11/12'>
            <div
              class='w-full'
            >
              <iframe
                class='mx-auto rounded shadow shadow-black/50 my-2 h-96 w-full md:w-2/3 sm:p-0'
                src='https://www.youtube.com/embed/SB1uGUhaYX0?si=BK78wteostAPrNL6'
                title='YouTube video player'
                allow='accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share'
                allowfullscreen></iframe>
            </div>

            <div>
              <div
                class='my-5 grid w-2/3 mx-auto grid-cols-1 gap-8 p-5 sm:w-full md:grid-cols-3 lg:rounded-lg lg:w-11/12 lg:mx-auto'
              >
                {
                  files.map((fil) => (
                    <a
                      class='bg-white hover:underline hover:decoration-1 h-full rounded p-5 shadow-lg'
                      href={fil.src}
                      target='_blank'
                    >
                      <Icon
                        class='h-24 w-24 rounded-full mx-auto block'
                        name={fil.iconName}
                      />
                      <div class="p-2">
                        <Icon
                          class='inline h-5 w-5 mr-2 text-[#ff3838] float-left'
                          aria-hidden='true'
                          name='teenyicons:pdf-solid'
                        />
                        <p class='inline text-sm lg:text-base clear-right p-2 lg:p-5'>{fil.filename}</p>
                      </div>
                    </a>
                  ))
                }
              </div>
            </div>
          </div>
        </section>
      </main>
    </div>
  </div>
</Base>

