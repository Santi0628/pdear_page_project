---
import type { Frontmatter } from '../config'
import { SiteMetadata } from '../config'
import Base from '../layouts/base.astro'
import { Icon } from 'astro-icon'
import HOJAS_PNG from "/src/assets/png/hojas_png_4.png"
import HOJAS_PNG_2 from "/src/assets/png/hojas_png_2.png"

const frontmatter: Frontmatter = {
  title: SiteMetadata.title,
  description: SiteMetadata.description,
  publishDate: SiteMetadata.buildTime
}

const objetivos = [
    {
        text: 'Fortalecer las acciones interinstitucionales y la participación de los diferentes actores en los procesos de educación ambiental',
        src: 'https://www.youtube.com/watch?v=91q2wN7Pqrg',
        label_src: 'Resultado COMEDAS'
    },
    {
        text: 'Fortalecer los procesos de formación e investigación en el sector formal de la educación.',
        src: 'https://www.youtube.com/watch?v=jJwjgtru75k',
        label_src: 'Experta Maritza Educación Ambiental'
    },
    {
        text: 'Fortalecer la estrategia de estímulos e incentivos para la educación ambiental en el sector formal',
        src: 'https://www.youtube.com/watch?v=VrZQqs2yL7g',
        label_src: 'Resultado universidades'
    },
    {
        text: 'Estructurar la estrategia edu-comunicativa que permita el cumplimiento del eje de información y comunicación del PDAR',
        src: 'https://www.youtube.com/watch?v=e4QUwoCq4fI',
        label_src: 'Metodologia PDARS'
    },
]

---
<Base frontmatter={frontmatter}>
    <div class="h-[calc(100vh-4rem)] bg-slate-100 overflow-visible relative">
        <h1 class="text-3xl font-bold text-white backdrop-brightness-50 tracking-wide text-center flex justify-center items-center h-[15%] z-10 relative">Nuestros Objetivos</h1>
        <div class="flex flex-wrap h-4/5 content-between justify-center md:content-around md:w-2/3 md:mx-auto">
            {
                objetivos.map(obj => <div class="z-10 w-5/6 bg-white text-lg px-5 py-2 my-2 rounded-lg shadow-lg shadow-black/25 h-min-96 md:w-96 md:m-5 xl:py-10 lg:text-xl lg:w-1/3">
                    <p>{obj.text}</p>
                    <a href={obj.src} target="_blank">
                        <Icon
                            class='ml-2 h-5 w-5 inline'
                            aria-hidden='true'
                            name="logos:youtube-icon"
                        />
                        <span class="text-base">{obj.label_src}</span>
                    </a>
                </div>)
            }
        </div>
        <img
            src={HOJAS_PNG.src}
            class="absolute right-0 top-0 z-0 h-full object-cover blur lg:hidden"
        />
        <img
            src={HOJAS_PNG_2.src}
            class="hidden absolute left-0 bottom-0 z-0 object-cover w-full blur rotate-180 lg:block"
        />
    </div>
</Base>